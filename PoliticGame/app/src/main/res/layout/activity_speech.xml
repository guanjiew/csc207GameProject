<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speechLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backColor"
    tools:context=".Games.SpeechGame.SpeechActivity">

    <TextView
        android:id="@+id/ChoiceB"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="TextView"
        android:textColor="?attr/textColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ChoiceC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChoiceA" />

    <TextView
        android:id="@+id/ChoiceA"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="TextView"
        android:textColor="?attr/textColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ChoiceB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prompt" />

    <TextView
        android:id="@+id/ChoiceD"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="TextView"
        android:textColor="?attr/textColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChoiceC" />

    <TextView
        android:id="@+id/ChoiceC"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="TextView"
        android:textColor="?attr/textColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ChoiceD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChoiceB" />

    <Button
        android:id="@+id/submit"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:onClick="compare"
        android:text="@string/speech_compare"
        app:layout_constraintBottom_toBottomOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/answer" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="221dp"
        android:layout_height="54dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:hint="@string/speech_user_input"
        android:inputType="textPersonName"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/submit"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="267dp"
        android:layout_height="162dp"
        android:text="Prompt"
        android:textColor="?attr/textColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

</androidx.constraintlayout.widget.ConstraintLayout>